{% extends 'base.html.twig' %}

{% block title %}Calculer sa moyenne{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Calculer sa moyenne</h1>
        </div>
        <form method="post" id="averageForm">
            <div class="col-12">
                <div class="row">
                    <div class="col-xl-6 mb-3">
                        <label for="lastname" class="form-label">Nom*</label>
                        <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Smith" required>
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="firstname" class="form-label">Prénom*</label>
                        <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Jhon" required>
                    </div>

                    <div class="col-xl-6 mb-3">
                        <label for="number1" class="form-label">Note*</label>
                        <div class="input-group">
                            <input type="number" name="number1" class="form-control note" step="0.5" min="0" max="20" aria-label="Note" id="number1" required>
                            <span class="input-group-text"> / 20</span>
                        </div>
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="number2" class="form-label">Note*</label>
                        <div class="input-group">
                            <input type="number" name="number2" class="form-control note" step="0.5" min="0" max="20" aria-label="Note" id="number2" required>
                            <span class="input-group-text"> / 20</span>
                        </div>
                    </div>
                    <div class="col-12 mt-3">
                        <button class="btn btn-outline-primary" type="submit">Calculer</button>
                        <button class="btn btn-outline-success ms-2" type="submit">Calculer et enregistrer</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row mt-5" id="averageResult">
        <div class="col-12">
            <h2>Résultat</h2>
        </div>
        <div class="col-12">
            <p>La moyenne de <span id="student"></span> est de <span id="average"></span> / 20</p>
    </div>
</div>
{% endblock %}
